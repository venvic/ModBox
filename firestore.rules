rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /product/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /logs/{document=**} {
    	allow read: if request.auth != null;
      allow write: if request.auth.token.serviceAccount == true;
    }
    
    match /global/settings {
      allow read: if request.auth != null;
      allow write: if request.auth.token.serviceAccount == true;
    }

    match /global/users/{document=**}  {
      allow read: if true;
      allow write: if true;
    }

    match /global/{document=**} {
    	allow read: if request.auth != null;
      allow write: if request.auth.token.serviceAccount == true;
    }

    // Deny all other requests
    match /{document=**} {
      allow read, write: if false;
    }
  }
}